<%- include("partials/header.ejs")%>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%=blog.title%></div>
	<form class="ui form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST"> /<!-- Changes POST to PUT -->
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%=blog.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label>Post Body</label>
			<textarea name="blog[body]"><%=blog.body%></textarea>			
		</div>					
		<input class="ui blue big basic button" type="submit" value="Update">
	</form>
</div>

<%- include("partials/footer.ejs")%>